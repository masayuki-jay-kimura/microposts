<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <h3>Following (<%= @users.count %>)</h3>
    <% if @users.any? %>
      <div class="follow_list">
          <ul> 
          <% @users.each do |user| %>
            <div class="follow_list__eachArea">
              <li><%= link_to gravatar_for(user, size: 50), user %></li>
              <li><%= link_to user.name, user %></li>
            </div>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>